global:
  scrape_interval: 15s

rule_files:
  - "alerts.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node-exporter'
    static_configs:
      - targets:
{% for host in groups['linux'] %}
        - '{{ host }}:9100'
{% endfor %}

  - job_name: 'windows-exporter'
    static_configs:
      - targets:
{% for host in groups['windows'] %}
        - '{{ host }}:9182'
{% endfor %}