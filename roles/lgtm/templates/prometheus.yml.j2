global:
  scrape_interval: 15s

rule_files:
  - "alerts.yml"

remote_write:
  - url: http://mimir:{{ mimir_port }}/api/v1/push

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}']

  - job_name: 'loki'
    static_configs:
      - targets: ['loki:{{ loki_port }}']

  - job_name: 'grafana'
    static_configs:
      - targets: ['grafana:{{ grafana_port }}']

  - job_name: 'tempo'
    static_configs:
      - targets: ['tempo:{{ tempo_port }}']

  - job_name: 'mimir'
    static_configs:
      - targets: ['mimir:{{ mimir_port }}']

  - job_name: 'node-exporter'
    scrape_interval: 15s
    static_configs:
      - targets:
{% for host in groups['linux'] | default([]) %}
        - '{{ host }}:9100'
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
        regex: '([^:]+):.+'
        replacement: '${1}'

  - job_name: 'windows-exporter'
    scrape_interval: 15s
    static_configs:
      - targets:
{% for host in groups['windows'] | default([]) %}
        - '{{ host }}:9182'
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
        regex: '([^:]+):.+'
        replacement: '${1}'

  - job_name: 'promtail'
    scrape_interval: 15s
    static_configs:
      - targets:
{% for host in groups['all'] | default([]) %}
{% if host not in groups['windows'] | default([]) %}
        - '{{ host }}:9080'
{% endif %}
{% endfor %}